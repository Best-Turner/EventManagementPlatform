<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">
    <changeSet id="create-event-table" author="Aleksandr">
        <createTable tableName="events">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="title" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(250)">
                <constraints nullable="false"/>
            </column>
            <column name="organizer_id" type="BIGINT">
                <constraints nullable="false" referencedTableName="users" referencedColumnNames="id"
                             foreignKeyName="fk_events_organizer"/>
            </column>
            <column name="start_date_time" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="end_date_time" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="location" type="VARCHAR(20)">
                <constraints nullable="false" checkConstraint="location IN('ONLINE', 'OFFLINE')"/>
            </column>
            <column name="address" type="VARCHAR(250)">
                <constraints nullable="true"/>
            </column>
            <column name="status" type="VARCHAR(50)">
                <constraints nullable="false"
                             checkConstraint="status IN( 'PLANNED', 'ONGOING', 'COMPLETED', 'CANCELLED')"/>
            </column>
            <column name="capacity" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="available_seats" type="INTEGER">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <createIndex tableName="events" indexName="idx_event_organizer">
            <column name="organizer_id"/>
        </createIndex>
        <createIndex tableName="events" indexName="idx_events_status">
            <column name="status"/>
        </createIndex>
        <createIndex tableName="events" indexName="idx_events_date">
            <column name="start_date_time"/>
        </createIndex>

    </changeSet>
</databaseChangeLog>


